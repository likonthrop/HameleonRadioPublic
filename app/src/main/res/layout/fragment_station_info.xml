<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UnusedAttribute,RtlSymmetry,UseCompoundDrawables,ContentDescription">

    <data>
        <import type="android.view.View"/>
        <variable
            name="model"
            type="com.anisimov.requester.models.Info" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="@{model == null ? View.VISIBLE : View.GONE, default=gone}"
            />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollY="0dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/stationName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="@{model.name}"
                    tools:text="Название радиостанции"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="@dimen/_14sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:background="@color/bottomIconColor" />

                <TextView
                    android:id="@+id/stationDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_15sdp"
                    android:background="@color/colorPrimary"
                    android:visibility="gone"
                    android:text="@{model.description}"
                    tools:text="На волнах «Нового Радио» слушай лучшие проверенные хиты, самые горячие новинки и веселые шоу (STARПерцы, «Светлый Хайп», хит-парад «Высшая лига» и многое другое)."
                    android:fontFamily="@font/nunito"
                    android:textSize="@dimen/_12sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:background="@color/bottomIconColor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingTop="@dimen/_17sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:text="@string/track_history"
                    android:visibility="gone"
                    android:gravity="center_horizontal|bottom"
                    android:fontFamily="@font/nunito"
                    android:textColor="@color/bottomIconColor"
                    android:textSize="@dimen/_10sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:background="@color/bottomIconColor" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle"
                    android:paddingTop="@dimen/_15sdp"
                    android:background="@color/colorPrimary"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>